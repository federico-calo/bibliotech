<?xml version="1.0"?>
<ruleset name="MonProjet">

    <file>web/src</file>
    <file>tests</file>

    <rule ref="PSR12"/>

    <exclude-pattern>web/src/legacy/*</exclude-pattern>

    <rule ref="Generic.Files.LineLength">
        <severity>1</severity> <!-- 1 = warning, 5 = error -->
        <properties>
            <property name="lineLimit" value="120"/>
        </properties>
    </rule>

    <rule ref="Squiz.Commenting.FileComment">
        <severity>0</severity>
    </rule>
</ruleset>
